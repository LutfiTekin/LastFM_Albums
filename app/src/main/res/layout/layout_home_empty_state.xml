<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/albumIcon"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_album_24"
        app:tint="@color/purple_700" />

    <TextView
        android:id="@+id/emptyStateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/home_empty_state_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/albumIcon"
        app:layout_constraintStart_toStartOf="@+id/albumIcon"
        app:layout_constraintTop_toBottomOf="@+id/albumIcon" />

    <TextView
        android:id="@+id/emptyStateSubText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/home_empty_state_subtext"
        app:layout_constraintEnd_toEndOf="@+id/emptyStateTitle"
        app:layout_constraintStart_toStartOf="@+id/emptyStateTitle"
        app:layout_constraintTop_toBottomOf="@+id/emptyStateTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>